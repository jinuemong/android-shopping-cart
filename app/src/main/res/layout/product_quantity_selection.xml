<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="productId"
            type="java.lang.Integer" />
        <variable
            name="position"
            type="java.lang.Integer" />
        <variable
            name="onClickCartItemCounter"
            type="woowacourse.shopping.view.cartcounter.OnClickCartItemCounter" />
        <variable
            name="cartItemCounter"
            type="woowacourse.shopping.domain.model.CartItemCounter" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="@{cartItemCounter.isSelected ? View.VISIBLE : View.GONE}"
        android:background="@drawable/shape_border_not_line">

        <TextView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:onClick="@{()->onClickCartItemCounter.clickDecrease(productId,position,cartItemCounter)}"
            android:text="-"
            android:textColor="@color/gray_5"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="@{String.valueOf(cartItemCounter.itemCount)}"
            android:textColor="@color/gray_5"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:onClick="@{()->onClickCartItemCounter.clickIncrease(productId,position,cartItemCounter)}"
            android:text="+"
            android:textColor="@color/gray_5"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_plus_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="@{()->onClickCartItemCounter.clickIncrease(productId,position,cartItemCounter)}"
        android:visibility="@{cartItemCounter.isSelected ? View.GONE : View.VISIBLE}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
